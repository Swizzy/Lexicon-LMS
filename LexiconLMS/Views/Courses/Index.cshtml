@model IEnumerable<LexiconLMS.Models.CourseViewModel>

<h2>Courses</h2>

<p>
    @Html.ActionLink("Add Course", "Create")
</p>
<table class="table sortable">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th data-defaultsort="asc">@Html.DisplayNameFor(model => model.StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.EndDate)</th>
            <th>@Html.DisplayNameFor(model => model.StudentsCount)</th>
            <th>@Html.DisplayNameFor(model => model.ModulesCount)</th>
            <th>@Html.DisplayNameFor(model => model.ActivitiesCount)</th>
            <th>@Html.DisplayNameFor(model => model.DocumentsCount)</th>
            <th data-defaultsort="disabled"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                <td>@Html.DisplayFor(modelItem => item.StudentsCount)</td>
                <td>@Html.DisplayFor(modelItem => item.ModulesCount)</td>
                <td>@Html.DisplayFor(modelItem => item.ActivitiesCount)</td>
                <td>@Html.DisplayFor(modelItem => item.DocumentsCount)</td>
                <td>
                    @Html.ActionLink("Modify", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Clone", "Clone", new { id = item.Id }) |
                    @Html.ActionLink("Modules", "Index", "Modules", new { courseId = item.Id }, null) |
                    @Html.ActionLink("Documents", "Index", "Documents", new { courseId = item.Id }, null) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
