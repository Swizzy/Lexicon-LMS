@model IEnumerable<LexiconLMS.Models.UserViewModel>

<h2>Teachers</h2>

<p>
    @Html.ActionLink("Add Teacher", "RegisterTeacher")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @{ 
                var email = "mailto:" + item.EMail;
            }
            <a href="@email">@item.EMail</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.ActionLink("Modify", "EditTeacher", new { id=item.Id }) 
            @if (item.CanBeDeleted)
            {
                <span>|</span> @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }
        </td>
    </tr>
}
</table>
