@model LexiconLMS.Models.UserViewModel

@{
    var accountType = "Student";
    if (Model.IsTeacher)
    {
        accountType = "Teacher";
    }
}

<h3>Are you sure you want to delete this @accountType account?</h3>
<div class="deleteView">
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.EMail)</dt>
        <dd>@Html.DisplayFor(model => model.EMail)</dd>

        @if (!string.IsNullOrWhiteSpace(Model.Phone))
        {
            <dt>@Html.DisplayNameFor(model => model.Phone)</dt>
            <dd>@Html.DisplayFor(model => model.Phone)</dd>
        }

        @if (!Model.IsTeacher && !string.IsNullOrWhiteSpace(Model.Course))
        {
            <dt>@Html.DisplayNameFor(model => model.Course)</dt>
            <dd>@Html.DisplayFor(model => model.Course)</dd>
        }
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
