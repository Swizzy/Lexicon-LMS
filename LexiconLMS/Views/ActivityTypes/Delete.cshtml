@model LexiconLMS.Models.ActivityTypeDeleteViewModel

<h3>Are you sure you want to delete this @Model.DeleteType?</h3>
<div class="deleteView">
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.IsAssignment)</dt>
        <dd>@Html.DisplayFor(model => model.IsAssignment)</dd>
        
        @if (Model.HasActivities)
        {
            <dt>@Html.DisplayNameFor(model => model.ActivitiesCount)</dt>
            <dd>@Html.DisplayFor(model => model.ActivitiesCount)</dd>

            if (Model.HasActivityDocuments)
            {
                <dt>@Html.DisplayNameFor(model => model.ActivityDocumentsCount)</dt>
                <dd>@Html.DisplayFor(model => model.ActivityDocumentsCount)</dd>
            }
        }
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
