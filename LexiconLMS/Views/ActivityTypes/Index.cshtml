@model IEnumerable<LexiconLMS.Models.ActivityTypeViewModel>

<h2>Activity Types</h2>

<p>
    @Html.ActionLink("Add Activity Type", "Create")
</p>
<table class="table sortable">
    <thead>
        <tr>
            <th data-defaultsort="asc">@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.IsAssignment)</th>
            <th>@Html.DisplayNameFor(model => model.ActivitiesCount)</th>
            <th data-defaultsort="disabled"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.IsAssignment)</td>
                <td>@Html.DisplayFor(modelItem => item.ActivitiesCount)</td>
                <td>
                    @Html.ActionLink("Modify", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
