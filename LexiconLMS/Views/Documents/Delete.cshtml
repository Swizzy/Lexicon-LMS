@model LexiconLMS.Models.DocumentDeleteViewModel

<h3>Are you sure you want to delete this @Model.DocumentType?</h3>
<div class="deleteView">
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>


        @if (!string.IsNullOrWhiteSpace(Model.Link))
        {
            <dt>@Html.DisplayNameFor(model => model.Link)</dt>
            <dd>@Html.DisplayFor(model => model.Link)</dd>
        }
        else
        {
            <dt>@Html.DisplayNameFor(model => model.FileName)</dt>
            <dd>@Html.DisplayFor(model => model.FileName)</dd>
        }

        <dt>@Html.DisplayNameFor(model => model.CreatedBy)</dt>
        <dd>@Html.DisplayFor(model => model.CreatedBy)</dd>

        <dt>@Html.DisplayNameFor(model => model.CreateDate)</dt>
        <dd>@Html.DisplayFor(model => model.CreateDate)</dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
