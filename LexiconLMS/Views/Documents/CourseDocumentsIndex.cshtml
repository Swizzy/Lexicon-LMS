@model LexiconLMS.Models.CourseDocumentsViewModel

<h2>Course Documents</h2>

<p>
    @Html.ActionLink("Add File", "CreateFile", new { Model.CourseId }, null)
    @Html.ActionLink("Add Link", "CreateLink", new { Model.CourseId }, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Documents.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Documents.FirstOrDefault().UploadedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Documents.FirstOrDefault().CreateDate)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.Documents)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Download", new { item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.ActionLink("Modify", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
