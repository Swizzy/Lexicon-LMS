@model LexiconLMS.Models.ModuleDocumentsViewModel

<h2>Module Documents</h2>

<p>
    @Html.ActionLink("Add File", "CreateFile", new { Model.ModuleId }, null)
    @Html.ActionLink("Add Link", "CreateLink", new { Model.ModuleId }, null)
</p>
<table class="table sortable">
    <thead>
        <tr>
            <th data-defaultsort="asc">@Html.DisplayNameFor(model => model.Documents.FirstOrDefault().Name)</th>
            <th>@Html.DisplayNameFor(model => model.Documents.FirstOrDefault().UploadedBy)</th>
            <th>@Html.DisplayNameFor(model => model.Documents.FirstOrDefault().CreateDate)</th>
            <th data-defaultsort="disabled"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Documents)
        {
            <tr>
                <td>@Html.ActionLink(item.Name, "Download", new { item.Id }, new { target = "_blank" })</td>
                <td>@Html.DisplayFor(modelItem => item.UploadedBy)</td>
                <td>@Html.DisplayFor(modelItem => item.CreateDate)</td>
                <td>
                    @Html.ActionLink("Modify", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
